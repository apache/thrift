{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "baseUrl": ".",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "target": "es6",
        "paths": {
            "*": [
                "*",
                "test/",
                "test/gen-js/*"

            ]
        },
    },
    "exclude": [
        "./test/gen-nodejs/",
        "./test/build/",
    ]
}
