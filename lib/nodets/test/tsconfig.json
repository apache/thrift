{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "baseUrl": ".",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "target": "es6",
        "paths": {
            "thrift": ["../../nodejs/lib/thrift"]
        }
    }
}
